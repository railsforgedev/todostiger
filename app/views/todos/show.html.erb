<turbo-frame id="modal">
  <div class="bg-white p-6 rounded-lg shadow-lg">
    <h2 class="text-xl font-bold mb-4"><%= @todo.title %></h2>
    <p class="text-gray-700 mb-4"><%= @todo.description %></p>
    <button class="bg-gray-500 hover:bg-gray-600 text-white mt-4 px-4 py-2 rounded cursor-pointer" onclick="document.getElementById('modal').innerHTML = ''">Close</button>
  </div>
</turbo-frame>
