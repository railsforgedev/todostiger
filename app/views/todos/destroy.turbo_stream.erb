<!-- ✅ Remove the deleted Todo -->
<turbo-stream action="remove" target="<%= dom_id(@todo) %>"></turbo-stream>

<!-- ✅ Fix: Reload the Todos Page of Deleted Todo's Date -->
<turbo-stream action="append" target="flash_messages">
  <template>
    <script>
      Turbo.visit("<%= by_date_todos_path(date: @date) %>", { action: "replace" });
    </script>
  </template>
</turbo-stream>

<!-- ✅ Flash message stays visible -->
<turbo-stream action="update" target="flash_messages">
  <template>
    <div data-controller="flash" class="flash flash-success">
      Todo deleted successfully.
      <button data-action="click->flash#dismiss" class="flash-close">&times;</button>
    </div>
  </template>
</turbo-stream>
