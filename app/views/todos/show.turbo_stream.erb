<turbo-stream action="update" target="modal">
  <template>
    <turbo-frame id="modal">
      <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center">
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <h2 class="text-xl font-bold mb-4"><%= @todo.title %></h2>
          <p class="text-gray-700 mb-4"><%= @todo.description %></p>
          <button class="text-red-500" data-action="click->modal#close">Close</button>
        </div>
      </div>
    </turbo-frame>
  </template>
</turbo-stream>
